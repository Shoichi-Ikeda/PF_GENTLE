<div class="container">
  <div class="user-show-bg rounded">
    <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", class: "card-image rounded" %>
    <h2 class="h-text"><%= user.name %> 'S WINE</h2>
  </div>
</div>
<div class="index-container">
  <div class="row">
    <% @wines.each do |wine| %>
    <div class="index-box">
      <div class="card shadow-lg text-center">
      <%= link_to wine_path(wine.id) do %>
        <%= attachment_image_tag wine, :wine_image, :fill, 220, 220, class: "card-image rounded" %>
        <div class="card-body pt-1 pb-1">
          <p class="card-title m-1">
          <%= wine.wine_name %>
          </p>
      <% end %>
          <p class="star m-2" id="star<%= wine.id %>">
            <script>
            $("#star<%= wine.id %>").raty({
              starOff: "<%= asset_path("star-off.png") %>",
              starOn : "<%= asset_path("star-on.png") %>",
              readOnly: true,
              score: <%= wine.rating %>,
            });
            </script>
          </p>
          <div class="row border-top m-auto">
            <div class="col m-1">
              ♡<!--コメント数-->
            </div>
            <div class="col m-1">
              ♥<!--いいね数-->
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
