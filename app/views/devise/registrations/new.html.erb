<div class="container-fuild signup-bg">
  <div class="row justify-content-center">
    <div class="text p-5">SIGN UP</div>
  </div>
  <div class="row">
    <div class="col-10 offset-1 mx-auto text-center">
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <div class="form-group login-form">
          <%= f.text_field :name, autofocus: true, placeholder: "お名前", class: "text-center form" %>
        </div>
      </div>
      <div class="field">
        <div class="form-group login-form">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "text-center form" %>
        </div>
      </div>
      <div class="field">
      <% if @minimum_password_length %>
      <% end %>
        <div class="form-group login-form">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード ※6文字以上必須", class: "text-center form" %>
        </div>
      </div>
      <div class="field">
        <div class="form-group login-form">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class: "text-center form" %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit "登録する", class: "text-center" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>