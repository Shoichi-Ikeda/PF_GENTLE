<div class="container">
  <% render "layouts/errors", obj: @wine %>
  <div class="row">
    <div class="col-md-3">
      <!--render "user/info", user: current_user-->
      <h3 class="mt-3">NEW TASTING</h3>
      <%= render "form", wine: @wine %>
    </div>
    <div class="col-md-8 offset-md-1">
      <% @wines.each do |wine| %>
        <%= link_to wine_path(wine.id) do %>
          <%= attachment_image_tag wine, :wine_image, :fill, 200, 200 %>
        <% end %>
        <div class="index wine_user_name">
          <%= wine.user.name %>
        </div>
        <div class="index wine_name">
          <%= wine.wine_name %>
        </div>
        <div id="star-<%= wine.id %>"></div>
          <script>
          $('#star-<%= wine.id %>').raty({
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            readOnly: true,
            score: <%= wine.rating %>,
          });
          </script>
      <% end %>
    </div>
  </div>
</div>